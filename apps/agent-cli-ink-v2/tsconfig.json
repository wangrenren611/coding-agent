{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "jsx": "react-jsx",
    "noEmit": true
  },
  "include": ["src/**/*", "../../src/**/*.ts", "../../src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
