
GLM_API_KEY=

# ============================================================================
# Agent Configuration
# ============================================================================

# 最大循环次数，防止无限循环 (默认: 10)
AGENT_MAX_LOOP=10

# 每任务最大工具调用数 (默认: 8)
AGENT_MAX_TOOLS=8

# 单次请求超时时间 (毫秒，默认: 60000)
AGENT_TIMEOUT=60000

# 是否启用文件备份 (默认: true)
AGENT_ENABLE_BACKUP=true

# 每个文件最大备份数量 (默认: 5)
AGENT_MAX_BACKUPS=5

# ============================================================================
# Logger Configuration
# ============================================================================

# 日志环境（可选: development/staging/production/test）
# LOG_ENV=development

# 全局日志级别（0/10/20/30/40/50）
# LOG_LEVEL=20

# 服务名
# LOG_SERVICE=coding-agent

# 是否记录 Agent 事件
# LOG_AGENT_EVENTS=true

# 控制台输出
# LOG_CONSOLE_ENABLED=true
# LOG_CONSOLE_LEVEL=20
# LOG_CONSOLE_FORMAT=pretty
# LOG_CONSOLE_COLORIZE=true
# LOG_CONSOLE_TIMESTAMP=true
# LOG_CONSOLE_STREAM=stdout

# 文件输出
# LOG_FILE_ENABLED=true
# LOG_FILE_LEVEL=20

# 文件路径配置（二选一）
# 1) 直接指定完整路径
# LOG_FILE_PATH=./logs/agent.log
# 2) 指定目录 + 文件名
# LOG_DIR=./logs
# LOG_FILE_NAME=agent.log

# 文件写入行为
# LOG_FILE_FORMAT=json
# LOG_FILE_SYNC=false
# LOG_FILE_BUFFER_SIZE=1000
# LOG_FILE_FLUSH_INTERVAL=1000

# 文件轮转
# LOG_FILE_ROTATION_ENABLED=true
# LOG_FILE_ROTATION_STRATEGY=size   # size/time/both
# LOG_FILE_ROTATION_MAX_SIZE=10485760
# LOG_FILE_ROTATION_MAX_FILES=5
# LOG_FILE_ROTATION_INTERVAL=3600000

# 敏感字段（逗号分隔）
# LOG_SENSITIVE_FIELDS=apiKey,api_key,password,token,secret,authorization
