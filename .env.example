
GLM_API_KEY=

# ============================================================================
# Agent Configuration
# ============================================================================

# 最大循环次数，防止无限循环 (默认: 10)
AGENT_MAX_LOOP=10

# 每任务最大工具调用数 (默认: 8)
AGENT_MAX_TOOLS=8

# 单次请求超时时间 (毫秒，默认: 60000)
AGENT_TIMEOUT=60000

# 是否启用文件备份 (默认: true)
AGENT_ENABLE_BACKUP=true

# 每个文件最大备份数量 (默认: 5)
AGENT_MAX_BACKUPS=5