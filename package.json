{
  "name": "agent-v4",
  "version": "1.0.0",
  "description": "生产级 AI 编码助手框架，采用 ReAct 范式和协调器模式设计，支持多轮对话、工具调用、流式输出、自动重试、上下文压缩",
  "license": "ISC",
  "author": "1011420784@qq.com",
  "type": "module",
  "main": "index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx src/demo-1.ts",
    "dev:plan": "cross-env NODE_ENV=development tsx src/demo-plan.ts",
    "dev:multi-agent-analysis": "cross-env NODE_ENV=development tsx src/demo-multi-agent-analysis.ts",
    "dev:orchestration": "cross-env NODE_ENV=development tsx src/examples/multi-agent-runtime.ts",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "cli": "bun run src/cli/run.tsx",
    "dev:cli": "cross-env NODE_ENV=development bun run src/cli/run.tsx",
    "bench:agent:adapter": "tsx test-agent/agent-adapter.ts",
    "bench:agent:ts-bench": "tsx test-agent/run-ts-bench.ts",
    "bench:multi-swe": "tsx test-agent/multi-swe-bench-adapter.ts",
    "batch:test": "tsx test-agent/batch-test-direct.ts",
    "batch:test:skip-agent": "tsx test-agent/batch-test-direct.ts --skip-agent",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "typecheck:test": "tsc --noEmit --project tsconfig.test.json",
    "ci:check": "pnpm format:check && pnpm typecheck && pnpm lint && pnpm test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.2.0",
    "@types/react": "^19.0.6",
    "@types/shell-quote": "^1.7.5",
    "@types/turndown": "^5.0.6",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "chalk": "^5.4.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "tsup": "^8.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@opentui/core": "^0.1.80",
    "@opentui/react": "^0.1.80",
    "@tavily/core": "^0.7.1",
    "@vscode/ripgrep": "^1.17.0",
    "agent-browser": "^0.9.0",
    "dotenv": "^17.2.3",
    "execa": "^9.6.1",
    "fast-glob": "^3.3.3",
    "iconv-lite": "^0.7.2",
    "isbinaryfile": "^5.0.7",
    "mongodb": "^7.1.0",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "shell-quote": "^1.8.3",
    "strip-ansi": "^7.1.2",
    "turndown": "^7.2.2",
    "uuid": "^11.1.0",
    "zod": "^4.3.6"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@vscode/ripgrep"
    ]
  },
  "ts-node": {
    "experimentalSpecifierResolution": "node"
  }
}
